{
  "name": "web3-university-app",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "lint:style": "stylelint \"**/*.{css,less,scss,sass}\"",
    "format": "prettier --write \"**/*.{js,.jsx,.ts,.tsx,json,css,less,scss,sass}\"",
    "prepare": "husky install",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy:cf": "npm run pages:build && wrangler pages deploy",
    "cypress:open": "cypress open",
    "test:e2e:open": "start-server-and-test dev http://localhost:3000 cypress:open"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@ethersproject/bignumber": "^5.8.0",
    "@ethersproject/contracts": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@rainbow-me/rainbowkit": "^2.2.4",
    "@tanstack/react-query": "^5.71.1",
    "@web3-react/core": "^8.2.3",
    "@web3-react/metamask": "^8.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint-plugin-next-on-pages": "^1.13.12",
    "ethers": "^6.13.5",
    "jotai": "^2.12.2",
    "lightweight-charts": "^5.0.6",
    "lucide-react": "^0.487.0",
    "next": "15.1.5",
    "next-themes": "^0.4.6",
    "ogl": "^1.0.11",
    "react": "^19.0.0",
    "react-countup": "^6.5.3",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "three": "^0.175.0",
    "tw-animate-css": "^1.2.5",
    "viem": "^2.24.2",
    "wagmi": "^2.14.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19",
    "@types/three": "^0.175.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "critters": "^0.0.25",
    "cypress": "^14.3.3",
    "eslint": "^9",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-next": "15.1.5",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "start-server-and-test": "^2.0.12",
    "stylelint": "^16.17.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^37.0.0",
    "tailwindcss": "^4.0.9",
    "typescript": "5.7.3",
    "vercel": "^41.7.0",
    "wrangler": "^4.13.2"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,scss,sass}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
