{
  "name": "web3-university-app",
  "version": "0.1.0",
  "packageManager": "yarn@1.22.19",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3005 --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src --fix",
    "lint:style": "stylelint \"**/*.{css,less,scss,sass}\"",
    "format": "prettier --write \"**/*.{js,.jsx,.ts,.tsx,json,css,less,scss,sass}\"",
    "prepare": "husky install",
    "build:worker": "opennextjs-cloudflare",
    "dev:worker": "wrangler dev --port 8771",
    "preview": "npm run build:worker && npm run dev:worker",
    "deploy": "npm run build:worker && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.8.0",
    "@ethersproject/contracts": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.5",
    "@rainbow-me/rainbowkit": "^2.2.4",
    "@tanstack/react-query": "^5.71.1",
    "@web3-react/core": "^8.2.3",
    "@web3-react/metamask": "^8.2.4",
    "eventemitter3": "^5.0.1",
    "lucide-react": "^0.477.0",
    "next": "15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-jazzicon": "^1.0.4",
    "viem": "^2.24.2",
    "wagmi": "^2.14.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@opennextjs/cloudflare": "^0.3.8",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-next": "15.1.5",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "stylelint": "^16.17.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^37.0.0",
    "tailwindcss": "^4.0.9",
    "typescript": "5.7.3",
    "wrangler": "^3.103.2"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,scss,sass}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
